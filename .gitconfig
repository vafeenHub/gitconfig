[user]
	name = A
	email = 666av6@gmail.com
	signingkey = ~/.ssh/id_ed25519.pub
[init]
	defaultBranch = main
[core]
	editor = code --wait
	autocrlf = input
	fileMode = true
[gpg]
	format = ssh
[commit]
	gpgsign = true
[tag]
	gpgsign = true
[gpg "ssh"]
	allowedSignersFile = ~/.ssh/allowed_signers
[push]
	autoSetupRemote = true
[alias]
	closetask = "!f() { current_branch=$(git rev-parse --abbrev-ref HEAD); git checkout main && git branch -D \"$current_branch\" 2>/dev/null || true; git pull --prune; }; f"
	fast = "!f() { git add . && git commit -m \"upd\" && git push; }; f"
